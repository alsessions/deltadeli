{
  "name": "delta-deli",
  "version": "1.0.0",
  "description": "Website for Delta Deli - A small deli and restaurant in Rome, NY",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:tailwind": "tailwindcss -i ./src/styles/tailwind.css -o ./_site/styles/main.css --watch",
    "build": "npm-run-all build:*",
    "build:eleventy": "eleventy",
    "build:tailwind": "NODE_ENV=production tailwindcss -i ./src/styles/tailwind.css -o ./_site/styles/main.css --minify"
  },
  "keywords": [
    "eleventy",
    "tailwindcss",
    "restaurant",
    "deli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.1"
  }
}
